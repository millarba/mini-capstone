<% @product.errors.full_messages.each do |error| %>
  <%= error %>
<% end %>

<h1>Edit a product</h1>

<%= form_tag "/products/#{@product.id}", method: :patch do %>

  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @product.name %>
  </div>  

  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price, @product.price %>
  </div>

  <div>
    <%= label_tag :supplier %>
    <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name, selected: @product.supplier_id %>
  </div>

  <div>
    <%= label_tag :color %>
    <%= text_field_tag :color, @product.color %>
  </div>
  
  <div>
    <%= label_tag :description%>
    <%= text_area_tag :description, @product.description %>
  </div>
  <input type="submit", value="Update Product">
<% end %>